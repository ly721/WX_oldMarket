.main{
    padding: 10rpx;
}
.slides{
    width: 100%;
}
.slides swiper-item{
   border-radius: 20rpx 20rpx 0 0;
   width: 100%;
}
swiper-item image{
    border-radius: 20rpx 20rpx 0 0;
    width: 100%;
   
}
.textDetail{
    position: relative;
    background-color: #fff;
    padding:10rpx;
    padding-bottom: 30rpx;
    border-radius: 0 0 20rpx 20rpx;
}
.price{
    font-size: 40rpx;
}
.user{
    padding: 10rpx 20rpx;
    margin-top: 5rpx;
    display: flex;
    justify-content: space-between;
    background-color: #fff;
    align-items: center;
}
.user h3{
    font-weight: 400;
    font-size: 38rpx;
    margin: 10rpx;
}
.user image{
    width: 150rpx;
    height: 150rpx;
}
.Pdesc{
    margin:20rpx 0;
}
.addFocus{
    margin:10rpx 0;
    height:70rpx;
    border-radius: 20rpx;
    width: 140rpx;
    text-align: center;
    line-height: 70rpx;
    background-color: yellow;
}
.addFocus.active{
    background-color: rgba(0,0,0,.4);
    color: #eee;
}
/* 评论区 */
.comments{
    margin-top: 20rpx;
    background-color: #fff;
    margin-bottom: 120rpx;
    padding:  20rpx ;
}
.comments .input{
    display: flex;
    flex-direction: row;
}
.comments .input image{
    width: 100rpx;
    height: 100rpx;
    margin-right: 20rpx;
}
.comments .input input{
    background-color: #eee;
    height: 80rpx;
    width: 80%;
    border-radius: 20rpx;
    margin-top: 10rpx;
    font-size: 26rpx;
    padding-left: 10rpx;
    margin-right: 20rpx;
}
.comment{
    margin-top: 20rpx;
}
.context-box{
  display: flex;
  flex-direction: row;
  width: 100%;
}
.context-box .commentRight {
    margin-right: 40rpx;
}
.context-box .commentRight image{
    width: 100rpx;
    height: 100rpx;
    margin-right: 5%;
    margin-top: 10rpx;
    border-radius: 50%;
}
.context-box .context{
    width: 100%;
    padding-right: 10rpx;
}
.context-box .commentText{
    margin:10rpx 0;
}
.children{
    background-color: #eee;
    color: skyblue;
    height: 60rpx;
    line-height: 60rpx;
    width: 100%;
    font-size: 30rpx;
    margin-bottom: 10rpx;
    font-size: 28rpx;
    padding-left:5rpx;
}
.commentLeft .tools image,.nameSec image{
    width: 50rpx; 
    height: 50rpx; 
}
.commentLeft{
    width: 90%;
}
.commentLeft .tools {
 display: flex;
 justify-content: space-between;
 align-items: center;
 padding-right: 10rpx;
}
.commentLeft .tools image:first-child{
    margin-right: 30rpx;
}



/* 二级评论 */
.secondMain{
    width: 100%;
    background-color: #eee;
}
.showSecondCom{
  display: flex;
  flex-direction: row;
  padding: 15rpx;
  width: 100%;
}
.showSecondCom .ava{
    margin-right: 20rpx;
    width: 80rpx;
    height: 80rpx;
    border-radius: 50%;
}

.nameSec{
    display: flex;
    justify-content: space-between;
}
.contextSec{
    width: 100%;
}

.input-section {
    position: absolute;
    display: flex;
    align-items: center;
    height: 110rpx;
    bottom: 0rpx;
    left: 0rpx;
    right: 0rpx;
    z-index: 500;
    background: #fff;
}
 
.input_input {
    background: #fff;
    margin-top: 12rpx;
    z-index: 500;
    width: 580rpx;
    height: 110rpx;
    padding-left: 35rpx;
 
}
 


.likebox{
    padding: 20rpx;
    width: 100%;
    height: 120rpx;
    background-color: #fff;
    position: fixed;
    z-index:2;
    left:0;
    bottom: 0;
    display: flex;
    justify-content: space-between;
    align-items: center;
}
.allremain{
    color: black; 
    font-size: 40rpx; 
    font-weight: 500;
    margin-bottom: 15rpx;
}
.likebox .want{
    height: 70rpx;
    line-height: 50rpx;
    width: 40%;
    text-align: center;
    padding-top:10rpx;
    background-color: red;
    color:#fff;
    border-radius: 10rpx;
}

.likebox .person{
    height: 70rpx;
width: 28%;
text-align: center;
padding-top: 10rpx;
color: #222;
border-radius: 30rpx;
border: 1rpx solid #666;

}
.likebox .verText{
    width: 25%;
}
.verText image{
    width: 60rpx;
    height: 60rpx;
}
 .verText{
    display: flex;
    justify-content: space-between;
    width: 40%;
    font-size: 28rpx;
}
.like{
    display: flex;
    flex-direction: column;
}




.dialog {
    position: fixed;
    z-index: 999;
    top: 0; 
    left: 0; 
    right: 0;
    bottom: 0;
}
.modelTop{
    position: absolute;
    top: 0; 
    left: 0; 
    right: 0;
    bottom: 0;
    z-index: 1000;
    background-color:rgba(0,0,0,.3);
}

.modelBd{
    position: absolute;
    left: 0;
    right: 0;
    bottom: 0;
    display: flex;
    z-index: 10001;
    flex-direction: column;
    padding-top: 10rpx;
    background-color: #fff;
    height: 30%;
    border-radius: 30rpx 30rpx 0 0;
}
.modelBd .replayCtx{
    border-bottom: 1rpx solid #ccc;
    color: #515151;
    text-align: center;
 }
.modelBd view{
    padding: 0 30rpx;
    height: 20%;
}
.modelBd text{
    display: block;
    padding: 25rpx;
    text-align: center;
}
.cancel_btn{
    margin: 5rpx 40rpx;
    border-radius: 30rpx;
    background-color: rgba(0,0,0,.2);
}


/*动画前初始位置*/

 .dialog .modelBd {
    transform: translateY(-300);
} 

