.desc{
  padding: 10rpx 20rpx;
  font-weight: 500;
  overflow:hidden;
  text-overflow: ellipsis;
  white-space: rap;
}
.goodsList .good-box .detail{  
 display: flex;
 justify-content: space-between;
 align-items: center;
padding: 0 20rpx 10rpx;

}
.price{
 font-size: 34rpx;
}
.goodsList { 
                     width: 100%;
                     margin-top: 50px;
                     position:relative;
                 }
                 .good-box { 
                     z-index: 10;
                     transition: 0.25s;
                    overflow: hidden;
                   position: absolute;
             }
                .good-box img{
                  width: 100%;
                   height:100%;
                   transition: 0.25s;
               }
               .good-box:hover img{
                    z-index: 100;
                 transition: 0.25s;
                overflow: hidden;
                    animation: bounceIn 0.25s ease-in 2 alternate;
               }
               @keyframes bounceIn{
                  100% {
                        transform: scale(1.07);
                 }
               }