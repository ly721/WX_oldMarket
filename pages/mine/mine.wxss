page{
    background-color:#eee;
}
.mine{
    margin-top: -5rpx;
    padding:20rpx;
    background-color:#fff;
    border-radius: 0  0 50rpx 50rpx;
    box-shadow: 0 1rpx 20rpx pink;
}
.avatar{
    height: 260rpx;  
    text-align: center; 
}
.avatar .avtImg{
    overflow:hidden;  
    display: block;  
    width: 170rpx;  
    height: 170rpx;  
    margin: 20rpx; 
    margin-left: 50%;
    transform: translateX(-50%); 
    margin-top: 40rpx;  
    border-radius: 50%;  
    border: 2px solid #fff;  
    box-shadow: 3px 3px 10px rgba(0, 0, 0, 0.2);  
    background-color: #fff;
}
.avatar .avtImg image{
    width: 160rpx;  
    height: 160rpx;  
}
.tools{
    padding: 10rpx;
}
.tools .setting view{
    height: 100rpx;
    border-radius: 30rpx;
    background-color: #fff;
    margin-top: 25rpx;
    line-height: 88rpx;
    padding: 10rpx 20rpx;
}
.btn {
    margin-top: 40rpx;
    display: flex;
    flex-direction: row;
}
.btn button:first-child{
   margin-right: 30rpx;
   border: 1rpx solid red;

}
.btn button:last-child{
   border: 1rpx solid green;
}