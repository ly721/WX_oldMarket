page{
    background-color: #e9e9e9;
}
.link{
    /* background-color: #fff; */
    padding: 20rpx;
    border-radius: 30rpx;
    box-shadow: 0 1rpx 5rpx #eee;
    margin-bottom: 140rpx;
}
scroll-view{
    margin-bottom: 20rpx 20rpx140rpx;
}
.noLink{
    display: none;
}
.goodslink{
    display: flex;
    flex-direction: row;
    border-radius: 20rpx;
    padding: 10rpx 20rpx;
    /* margin-bottom: 140rpx; */
}
.goodslink image{
    width: 240rpx;
    height: 240rpx;
}
.goodslink .left{
    width: 100%;
   padding: 30rpx 20rpx;
}
.goodslink .price{
    
    margin: 20rpx 0;
    color: red;
}
.goodslink .bottonLeft{
    display: flex;
    justify-content: flex-end;
}

.link navigator{
    background-color: #fff;
}
.link button{
    padding-right: 0;
    margin:0;
}
.chat{
    padding:20rpx;
    position: fixed;
    bottom: 0;
    right: 0;
    left: 0;
    width: 100%;
    display: flex;
    flex-direction: row;
    background-color:#eee;
    padding: 30rpx 20rpx;
    align-items: center;
}
.chat input{
    background-color: #fff;
    height: 80rpx;
    border-radius: 20rpx;
    width: 90%;
    margin-right: 5%;
    padding: 0 15rpx;
}
.chat image{
    width: 70rpx;
    height: 70rpx;
}
.chat image.active{
    transform: rotate(45deg);
}
/* 已发链接样式 */
.sendLink{
    background-color: #ff8800;
    width: 180rpx;
    height: 60rpx;
    border-radius: 10rpx;
    text-align: center;
    line-height: 56rpx;
    color: #fff;
}
.sendlink2{
    display: flex;
    flex-direction: row-reverse;
}
.sendlink2 .good-box{
   background-color:#fff;
   border-radius: 30rpx;
   break-inside:avoid;
   margin-bottom: 20rpx;
}
.sendlink2 .good-box .gPic{
  width: 450rpx;
  height: 300rpx;
  display: block;
}
.sendlink2 .gPicNull{
  height: 0;
  width: 0;
  display: none;
} 
.sendlink2 .good-box .desc{
    margin: 10rpx 20rpx;
}
.sendlink2 .goodsList .good-box .detail{  
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin: 10rpx 20rpx;
}
.sendlink2 .price{
  font-size: 34rpx;
   padding: 10rpx 15rpx 0;
}
/*消息 区域*/
.msgBox{
  padding:20rpx;

}
/* 时间框 */
.betweenTime{
    height: 30rpx;
    width: auto;
    font-size: 20rpx;
    font-weight: 100;
    color: #000;
    text-align: center;
    padding: 10rpx;
}
.msgBox .msg{
    display: flex;
    flex-direction: row;
    margin: 0 15rpx;
}
.msgBox .msg .uimg{
    width: 80rpx;
    height: 80rpx;
    border-radius: 15rpx;
    margin-right: 20rpx;
}
.msgBox .msg .textarea{
   background-color: #fff;
   min-height: 80rpx;
   line-height: 80rpx;
   padding: 0 10rpx;
   border-radius: 15rpx;
}
.msgBox .msg2{
    display: flex;
    flex-direction: row-reverse;
    margin: 0 15rpx;
}
.msg2 .sendpic,.msg .sendpic{
  width: 300rpx;
  height: 240rpx;  
}


.msgBox .msg2 .uimg,.sendlink2 .fromUser{
    width: 80rpx;
    height: 80rpx;
    border-radius: 15rpx;
    margin-left: 20rpx;
}
.msgBox .msg2 .textarea{
    text-align: right;
    background-color: skyblue;
    min-height: 80rpx;
    line-height: 80rpx;
    padding: 0 10rpx;
    border-radius: 15rpx;
}